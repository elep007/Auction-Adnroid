    </LinearLayout>
    <LinearLayout
        android:id="@+id/layWinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:background="@drawable/layout_back_post">
            <ImageView
                android:id="@+id/Image"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_white_winner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="Congratulation!"
                    android:textColor="@color/colorPrice"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textWinnerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBaseline="@+id/txtPrice"
                    android:textColor="@color/colorWhite"
                    android:text="You won in a auction."
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
