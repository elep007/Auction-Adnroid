<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_video"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:text="Produts Name"
            android:textColor="@color/colorProduct"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBaseline="@+id/txtPrice"
                    android:textColor="@color/colorDescription"
                    android:text="Price : "
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/textView14234432"
                    android:text="17"
                    android:textColor="@color/colorPrice"
                    android:textSize="22dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView14234432"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/txtPrice"
                    android:text=" $"
                    android:textColor="@color/colorDescription"
                    android:textSize="15dp" />



                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBaseline="@+id/txtCountdown"
                    android:text="Bids : "
                    android:textColor="@color/colorDescription"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView14"
                    android:text="0"
                    android:textColor="@color/colorProduct"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/txtEndTime"
                    android:layout_alignBaseline="@+id/txtCountdown"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/colorDescription"
                    android:text="Ends : "
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/txtCountdown"
                    android:textColor="@color/colorBidButton"
                    android:text="23:55:45"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>